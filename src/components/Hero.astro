---
// src/pages/index.astro
import LogosSwiper from "../components/movimiento/LogosSwiper.jsx";
import HeroTypewriter from "./movimiento/HeroTypewriter";
---
<!-- Sección Hero -->
<section class="text-white pt-32 pb-2 px-6 min-h-[85vh] flex items-center">
  <div class="w-full max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-[1.5fr_1fr]
 items-center gap-12">
    
    <!-- Izquierda -->
    <div class="flex flex-col justify-center gap-6">
      <!-- Título línea por línea con máquina de escribir -->
       <HeroTypewriter client:visible />
      <!-- Párrafo, botón e imagen con animación secuencial -->
      <p
        class="text-base md:text-lg font-normal text-white font-poppins leading-relaxed fade-in-up"
        style="animation-delay: 2.3s"
      >
        Autenticación 2FA, bóvedas criptográficas (HSM),<br />
        gestión de identidad y analítica de riesgo basada en IA.
      </p>

<div class="w-full flex justify-center" >
  <a href="/contacto" class="btn-neon">
    AGENDA DEMO
  </a>
</div>


    </div>

    <!-- Imagen -->
    <div
      class="flex justify-center md:justify-end fade-in-up"
      style="animation-delay: 2.3s"
    >
      <img
        src="/hero.png"
        alt="Ilustración de seguridad"
        class="w-full max-w-md rounded-3xl rounded-tl-none rounded-br-none"
      />
    </div>
  </div>
</section>
<!-- Carrusel de Logos -->
<LogosSwiper client:only="react" />
<script>
  window.addEventListener("DOMContentLoaded", () => {
    const lines = document.querySelectorAll(".typewriter-line");

    // Duración de cada línea en segundos (debe coincidir con tu animación)
    const duraciones = [1.2, 1.2, 1.2, 1.2]; 

    lines.forEach((line, i) => {
      const tiempoTotal = duraciones.slice(0, i + 1).reduce((a, b) => a + b, 0);
      setTimeout(() => {
        line.classList.add("done");
      }, tiempoTotal * 1000);
    });
  });
</script>
