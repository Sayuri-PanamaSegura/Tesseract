---
import GrowCircleIndustria from "./movimiento/GrowCircleIndustria"
import SeccionConImagenLateral from "./movimiento/SeccionConImagenLateral"
import CarruselMovil from "./movimiento/CarruselMovil";

const tarjetas = [
  {
    texto: [
      { content: "Visibilidad, auditoría y cumplimiento normativo desde ", bold: false },
      { content: "una sola consola", bold: true },
    ],
    clase: "rounded-br-2xl",
  },
  {
    texto: [
      { content: "Compatible", bold: true },
      { content: " con Google KMS, Azure Vault, AWS KMS y entornos CIAM / PKI", bold: false },
    ],
    clase: "rounded-bl-2xl rounded-br-2xl",
  },
  {
    texto: [
      { content: "Segmentación lógica", bold: true },
      { content: " por tenant, aplicación o entorno", bold: false },
    ],
    clase: "rounded-bl-2xl",
  },
  {
    texto: [
      { content: "Elimina dependencias", bold: true },
      { content: " de proveedores cloud sin sacrificar seguridad", bold: false },
    ],
    clase: "rounded-tr-2xl",
  },
  {
    texto: [
      { content: "Despliegue flexible:", bold: true },
      { content: " nube, híbrido o en sitio", bold: false },
    ],
    clase: "rounded-tl-2xl rounded-tr-2xl",
  },
  {
    texto: [
      { content: "Administración centralizada de llaves con ", bold: false },
      { content: "visibilidad completa", bold: true },
      { content: " y control granular.", bold: false },
    ],
    clase: "rounded-tl-2xl",
  },
];
---

<section class="w-full px-6 py-12 pt-20 text-white">
  <SeccionConImagenLateral
    client:visible
    titulo="Control total y gobernanza de llaves en entornos híbridos y multicloud"
    texto='Toma el <span class="font-semibold">control completo de tus llaves</span> sin importar dónde residen tus cargas: GCP, AWS, Azure o infraestructura local. Keyphos permite administrar BYOK/HYOK con trazabilidad completa.'
    iconoDefault="/sitio/off.png"
    iconoActivo="/sitio/on.png"
  />

  <div class="max-w-4xl mx-auto">
    <!-- Desktop grid -->
    <div class="hidden md:grid grid-cols-3 gap-6">
      {tarjetas.map((t, i) => (
        <div key={i} class={`text-white text-center p-6 border border-white ${t.clase}`}>
          <p class="font-poppins text-sm leading-relaxed ">
            {t.texto.map((fragmento, j) =>
              fragmento.bold ? (
                <strong key={j} class="font-semibold">{fragmento.content}</strong>
              ) : (
                <span key={j}>{fragmento.content}</span>
              )
            )}
          </p>
        </div>
      ))}
    </div>

    <!-- Mobile carousel -->
    <CarruselMovil client:visible />
  </div>
</section>

 
<section  id="industrias" class="w-full px-6 py-8 pt-20  text-white">
  <div class="max-w-4xl mx-auto">
    {/* Título */}
    <div class="flex items-center mb-12">
      <div class="w-32 h-[6px] bg-[#CEFF1C] opacity-60 mr-4 relative -top-2"></div>
      <h2 class="text-3xl md:text-4xl font-semibold font-mono text-[#CEFF1C]">
        Sectores que protegemos
      </h2>
    </div>

    {/* Fondo con imagen */}
    <div class="relative rounded-3xl overflow-hidden">
      <div
        class="absolute inset-0 bg-cover bg-center bg-no-repeat"
        style={{ backgroundImage: "url('/sector/Rectangle.png')" }}
      ></div>

      {/* Grid de tarjetas animadas */}
      <div class="relative grid grid-cols-2 md:grid-cols-3 gap-10 p-10">
        <GrowCircleIndustria
        client:visible
          imagen="/sector/image-26.png"
          alt="Servicios Financieros"
          titulo="Servicios Financieros (Banca, Fintech, Sofipos, Socaps)"
        />
        <GrowCircleIndustria
        client:visible
          imagen="/sector/image-2.png"
          alt="Gobierno"
          titulo="Gobierno y Sector Público"
        />
        <GrowCircleIndustria
        client:visible
          imagen="/sector/image.png"
          alt="Salud"
          titulo="Salud y Seguros"
        />
        <GrowCircleIndustria
        client:visible
          imagen="/sector/image-3.png"
          alt="Retail"
          titulo="Comercio Electrónico y Retail"
        />
        <GrowCircleIndustria
        client:visible
          imagen="/sector/image-1.png"
          alt="Energía"
          titulo="Infraestructura Crítica y Energía"
        />
        <GrowCircleIndustria
        client:visible
          imagen="/sector/image-4.png"
          alt="Educación"
          titulo="Educación y Universidades"
        />
      </div>
    </div>
  </div>
</section>


<section  class="py-24 px-6 ">
  <div class="max-w-3xl mx-auto text-center mb-12">
    <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
      Contacta con nosotros
    </h2>
    <p class="text-white text-lg">
  Déjanos tus datos y nos pondremos en contacto </p>
  </div>

  <form
    action="https://formsubmit.co/tu-correo@ejemplo.com"
    method="POST"
    class="max-w-2xl mx-auto  backdrop-blur-lg p-10 rounded-3xl border-2 border-white shadow-xl grid gap-6"
  >
    <input type="hidden" name="_captcha" value="false" />
    <input type="hidden" name="_next" value="/gracias" />

    {/* Nombre y Apellido */}
    <div class="grid md:grid-cols-2 gap-4">
      <div>
        <label class="block text-sm font-medium text-white mb-1">
          Nombre
        </label>
        <input
          type="text"
          name="nombre"
          required
          placeholder="Ej. María"
          class="w-full px-4 py-3   border-2 border-[#CEFF1C]  rounded-xl focus:outline-none focus:ring-2 focus:ring-white transition"
        />
      </div>
      <div>
        <label class="block text-sm font-medium text-white mb-1">
          Apellido
        </label>
        <input
          type="text"
          name="apellido"
          required
          placeholder="Ej. López"
          class="w-full px-4 py-3  border-2 border-[#CEFF1C]  rounded-xl focus:outline-none focus:ring-2 focus:ring-white transition"
        />
      </div>
    </div>

    {/* Correo */}
    <div>
      <label class="block text-sm font-medium text-white mb-1">
        Correo electrónico
      </label>
      <input
        type="email"
        name="email"
        required
        placeholder="tucorreo@email.com"
        class="w-full px-4 py-3   border-2 border-[#CEFF1C] rounded-xl focus:outline-none focus:ring-2 focus:ring-white transition"
      />
    </div>

    {/* Teléfono */}
    <div>
      <label class="block text-sm font-medium text-white mb-1">
        Teléfono / WhatsApp
      </label>
      <input
        type="tel"
        name="telefono"
        placeholder="Ej. +52 55 1234 5678"
        class="w-full px-4 py-3 border-2 border-[#CEFF1C]  rounded-xl focus:outline-none focus:ring-2 focus:ring-white transition"
      />
    </div>

    {/* Empresa */}
    <div>
      <label class="block text-sm font-medium text-white mb-1">
        Empresa
      </label>
      <input
        type="text"
        name="empresa"
        placeholder="Nombre de la empresa"
        class="w-full px-4 py-3  border-2 border-[#CEFF1C] rounded-xl focus:outline-none focus:ring-2 focus:ring-white transition"
      />
    </div>


    {/* Mensaje */}
    <div>
      <label class="block text-sm font-medium text-white mb-1">
        ¿Cómo podemos ayudarte?
      </label>
      <textarea
        name="mensaje"
        rows="4"
        placeholder="Describe brevemente tu necesidad o proyecto..."
        class="w-full px-4 py-3 border-2 border-[#CEFF1C] rounded-xl focus:outline-none focus:ring-2 focus:ring-white transition resize-none"
      ></textarea>
    </div>

    {/* Botón */}
    <div class="text-center mt-6">
      <button
        type="submit"
        class="btn-neon px-8 py-3  font-medium rounded-xl "
      >
      
       ENVIAR MENSAJE 
      </button>
    </div>
  </form>
</section>
